<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.merve.neredeyiyelim.CafeGiris">



    <EditText
        android:id="@+id/editTextCafeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:id="@+id/editTextCafePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Password"
        />

    <Button
        android:id="@+id/buttonCafeGiris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giris" />

    <TextView
        android:id="@+id/textViewCafeYazi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Lütfen Üye Olunuz!!" />

</LinearLayout>
