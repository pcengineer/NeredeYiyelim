<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.merve.neredeyiyelim.KayitOlUser">


    <EditText
        android:id="@+id/editTextKayitAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Adı" />

    <EditText
        android:id="@+id/editTextKayitSoyadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Soyadı" />

    <EditText
        android:id="@+id/editTextKayitMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Mail" />

    <EditText
        android:id="@+id/editTextKayitSifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Password" />

    <Button
        android:id="@+id/buttonKulaniciKaydol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kaydol" />


</LinearLayout>
