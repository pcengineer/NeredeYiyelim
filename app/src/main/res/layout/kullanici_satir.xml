<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/textViewMenuAdi"
        android:layout_width="158dp"
        android:layout_height="96dp"
        android:background="#123654"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewCafeAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#693"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewFiyati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#456987"
            android:textSize="20dp"
            android:layout_weight="0.04" />

        <TextView
            android:id="@+id/textViewAdres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#785412"
            android:textSize="20dp"
            android:layout_weight="0.03" />

    </LinearLayout>


</LinearLayout>
